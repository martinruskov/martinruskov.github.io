
    <nz-select
      nzShowSearch
      nzServerSearch
      nzPlaceHolder="input search text"
      [(ngModel)]="selectedValue"
      [nzShowArrow]="false"
      [nzFilterOption]="nzFilterOption"
      (nzOnSearch)="search($event)"
    >
      @for (o of listOfOption; track o.value) {
        <nz-option [nzLabel]="o.text" [nzValue]="o.value"></nz-option>
      }
    </nz-select>
  