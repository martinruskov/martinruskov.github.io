
    <nz-select
      [(ngModel)]="selectedUser"
      (nzScrollToBottom)="loadMore()"
      nzPlaceHolder="Select users"
      nzAllowClear
      [nzDropdownRender]="renderTemplate"
    >
      @for (o of optionList; track o) {
        <nz-option [nzValue]="o" [nzLabel]="o"></nz-option>
      }
    </nz-select>
    <ng-template #renderTemplate>
      @if (isLoading) {
        <nz-spin></nz-spin>
      }
    </ng-template>
  